{
  "swagger": "3.0",
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title" : "User Management ",
    "description" : "Merchant and Normal Customers",
    "termsOfService": "http://swagger.io/terms",
    "contact": {
      "name": "Swagger API team"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Dev server"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "API for Users Endpoints"
    }
  ],
  "paths": {
    "/users/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "API Endpoint for create User",
        "description": "Create new User in database",
        "parameters": [
          {
            "name": "firstName",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 3,
              "maxLength": 15
            }
          },
          {
            "name": "lastName",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 5,
              "maxLength": 20
            }
          },
          {
            "name": "email",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "maxLength": 30
            }
          },
          {
            "name": "password",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 5,
              "maxLength": 20
            }
          },
          {
            "name": "password_confirm",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 5,
              "maxLength": 20
            }
          },
          {
            "name": "phoneNumber",
            "required": true,
            "in": "query",
            "schema": {
              "type": "integer",
              "minLength": 6,
              "maxLength": 20
            }
          },
          {
            "name": "userType",
            "required": true,
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["customer", "merchant"],
              "minLength": 6,
              "maxLength": 20
            }
          },
          {
            "name": "billingAddress",
            "required": true,
            "in": "query",
            "schema": {
              "type": "string",
              "minLength": 6,
              "maxLength": 20
            }
          },
          {
            "name": "billingCity",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 3,
              "maxLength": 20
            }
          },
          {
            "name": "billingPostalCode",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "integer",
              "minLength": 3,
              "maxLength": 20
            }
          },
          {
            "name": "billingCountry",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 3,
              "maxLength": 20
            }
          },
          {
            "name": "companyName",
            "required": true,
            "in": "query",
            "schema": {
              "type": "string",
              "minLength": 3,
              "maxLength": 20
            }
          },
          {
            "name": "companyVAT",
            "required": true,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "schemes": [],
        "responses": {
          "200": {
            "description" : "New user has Created"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": [ "Users" ],
        "summary": "API Endpoint for login User",
        "description": "Sign in User",
        "parameters": [
          {
            "name": "email",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 8
            }
          },
          {
            "name": "password",
            "required": true,
            "in": "query",
            "schema" : {
              "type": "string",
              "minLength": 6
            }
          }
        ],
        "schemes": [],
        "responses": {
          "200": {
            "description" : "User logging"
          }
        }
      }
    }
  },
  "definitions":{
    "SignupRsp":{
      "properties":{
        "success": {
          "type":"boolean"
        }
      }
    },
    "User":{
      "required": [
        "firstName",
        "lastName",
        "email",
        "password",
        "role"
      ],
      "properties":{
        "firstName": {
          "type" : "string",
          "minimum" : 2,
          "maximum" : 20
        },
        "lastName": {
          "type" : "string",
          "minimum" : 3,
          "maximum" : 20
        },
        "email": {
          "type" : "string"
        },
        "password": {
          "type" : "string"
        },
        "role": {
          "type": "string",
          "enum": ["merchant", "customer"]
        }
      }
    },
    "UserLogin":{
      "required": ["email", "password"],
      "properties":{
        "email": {
          "type" : "string"
        },
        "password": {
          "type" : "string"
        }
      }
    },
    "UserLoginRsp":{
      "properties":{
        "token": {
          "type" : "string"
        }
      }
    },
    "UserCustomRsp":{
      "properties":{
        "firstName" :{
          "type" :"string"
        },
        "lastName" :{
          "type" :"string"
        }
      }
    }
  }
}